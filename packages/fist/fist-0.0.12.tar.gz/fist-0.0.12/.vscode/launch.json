{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Web: Launch Site",
            "type": "chrome",
            "request": "launch",
            "preLaunchTask": "func: build site",
            "url": "http://localhost:4000",
        },
        {
            "name": "Python: Local Test",
            "type": "debugpy",
            "request": "launch",
            "console": "integratedTerminal",
            "module": "src.cli",
            "args": [
                "build",
                "-R",
                "${workspaceFolder}/data",
                "--target-directory=${workspaceFolder}/out"
            ],
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            },
            "preLaunchTask": "func: pip install",
            "postDebugTask": "func: refresh site",
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}/src"
            }
        }
    ]
}