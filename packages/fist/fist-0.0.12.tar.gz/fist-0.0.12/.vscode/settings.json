{
    "[github-actions-workflow]": {
        "editor.defaultFormatter": "redhat.vscode-yaml"
    },
    "[python]": {
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit",
            "source.unusedImports": "explicit"
        },
        "editor.defaultFormatter": "ms-python.black-formatter"
    },
    "[yaml]": {
        "editor.defaultFormatter": "redhat.vscode-yaml"
    },
    "black-formatter.cwd": "${workspaceFolder}/src",
    "editor.formatOnSave": true,
    "editor.tabSize": 4,
    "flake8.args": [
        "--max-line-length=120",
        "--extend-ignore=E203,E402,W503",
        "--per-file-ignores=__init__.py:F401,F403"
    ],
    "isort.args": [
        "--profile",
        "black"
    ],
    "pylint.args": [
        "source-roots=${workspaceFolder}/src",
        "--max-line-length=120",
        "--disable=C,R,W",
        "--ignored-classes=Exception"
    ],
    "pylint.ignorePatterns": [
        "**/__main__.py"
    ],
    "terminal.integrated.defaultProfile.windows": "Windows PowerShell",
    "files.associations": {
        "*.html": "liquid",
        "main.scss": "liquid-scss"
    },
    "yaml.schemas": {
        ".schema.json": [
            "data/**/*.yaml",
            "data/**/*.yml"
        ],
        "https://json.schemastore.org/github-issue-config.json": [
            "*.github/ISSUE_TEMPLATE/config.yaml",
            "*.github/ISSUE_TEMPLATE/config.yml"
        ],
        "https://www.schemastore.org/github-issue-forms.json": [
            "*.github/ISSUE_TEMPLATE/*-*.yaml",
            "*.github/ISSUE_TEMPLATE/*-*.yml"
        ],
        "https://json.schemastore.org/github-workflow.json": [
            "*.github/workflows/*.yaml",
            "*.github/workflows/*.yml"
        ],
        "https://json.schemastore.org/github-action.json": [
            "*.github/actions/*.yaml",
            "*.github/actions/*.yml"
        ],
        "https://json.schemastore.org/yamllint.json": [
            "templates/**/*.yaml",
            "templates/**/*.yml"
        ]
    }
}