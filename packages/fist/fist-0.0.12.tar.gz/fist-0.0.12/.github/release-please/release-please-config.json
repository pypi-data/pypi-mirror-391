{
    "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
    "group-pull-request-title-pattern": "chore${scope}: :bookmark: release${component} ${version}",
    "pull-request-title-pattern": "chore${scope}: :bookmark: release${component} ${version}",
    "packages": {
        ".": {
            "release-type": "simple",
            "draft": false,
            "extra-files": [
                {
                    "type": "generic",
                    "path": "pyproject.toml"
                }
            ]
        }
    },
    "changelog-sections": [
        {
            "type": "feat",
            "section": "Features"
        },
        {
            "type": "fix",
            "section": "Bug Fixes"
        },
        {
            "type": "docs",
            "section": "Documentation",
            "hidden": true
        },
        {
            "type": "style",
            "section": "Styles",
            "hidden": true
        },
        {
            "type": "refactor",
            "section": "Code Refactoring",
            "hidden": true
        },
        {
            "type": "perf",
            "section": "Performance Improvements"
        },
        {
            "type": "test",
            "section": "Tests",
            "hidden": true
        },
        {
            "type": "build",
            "section": "Build System",
            "hidden": true
        },
        {
            "type": "ci",
            "section": "Continuous Integration",
            "hidden": true
        },
        {
            "type": "chore",
            "section": "Miscellaneous Chores",
            "hidden": true
        },
        {
            "type": "revert",
            "section": "Reverts"
        }
    ]
}