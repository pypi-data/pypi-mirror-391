{
  "schemaVersion": "1.0.0",
  "name": "mdformat",
  "description": "Markdown formatter.",
  "languages": ["markdown"],
  "phase": "lint",
  "automatically_fix": true,
  "runtime": {
    "type": "python",
    "package": "mdformat",
    "minVersion": "0.7.22",
    "versionCommand": ["mdformat", "--version"]
  },
  "options": [
    {
      "name": "args",
      "type": "list[str]",
      "description": "Additional arguments appended to mdformat."
    }
  ],
  "actions": [
    {
      "name": "format",
      "command": {
        "strategy": "command_option_map",
        "config": {
          "base": ["mdformat"],
          "appendFiles": false,
          "options": [{ "setting": "args", "type": "args" }]
        }
      },
      "isFix": true,
      "description": "Format Markdown files using mdformat."
    },
    {
      "name": "check",
      "command": {
        "strategy": "command_option_map",
        "config": {
          "base": ["mdformat", "--check"],
          "appendFiles": false,
          "options": [{ "setting": "args", "type": "args" }]
        }
      },
      "ignoreExit": true,
      "description": "Check Markdown formatting without changes."
    }
  ],
  "extends": ["python_defaults"],
  "fileExtensions": [".md", ".markdown", ".mdx"],
  "documentation": {
    "help": {
      "path": "docs/mdformat_help.txt",
      "format": "text"
    },
    "commandHelp": {
      "path": "docs/mdformat_cmd_help.txt",
      "format": "text"
    }
  }
}
