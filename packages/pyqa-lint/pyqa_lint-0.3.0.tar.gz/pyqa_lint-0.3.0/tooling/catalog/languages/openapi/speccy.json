{
  "schemaVersion": "1.0.0",
  "name": "speccy",
  "description": "OpenAPI linter powered by Speccy.",
  "extends": ["npm_runtime"],
  "languages": ["openapi"],
  "phase": "lint",
  "fileExtensions": ["openapi.yaml", "openapi.yml", "swagger.yaml", "swagger.yml", "speccy.yaml", "speccy.yml"],
  "runtime": {
    "type": "npm",
    "package": "speccy",
    "versionCommand": ["speccy", "--version"]
  },
  "options": [
    {
      "name": "ruleset",
      "type": "path",
      "description": "Speccy ruleset file."
    },
    {
      "name": "skip",
      "type": "list[str]",
      "description": "Checks to skip during linting."
    },
    {
      "name": "args",
      "type": "list[str]",
      "description": "Additional arguments appended to speccy."
    }
  ],
  "actions": [
    {
      "name": "lint",
      "command": {
        "strategy": "command_option_map",
        "config": {
          "base": ["speccy", "lint", "--reporter", "json"],
          "appendFiles": false,
          "options": [
            { "setting": "ruleset", "type": "path", "flag": "--ruleset" },
            { "setting": "skip", "type": "args", "flag": "--skip" },
            { "setting": "args", "type": "args" }
          ]
        }
      },
      "parser": {
        "strategy": "parser_json",
        "config": {
          "transform": "pyqa.parsers.config.parse_speccy"
        }
      }
    }
  ],
  "documentation": {
    "help": {
      "path": "docs/speccy_help.txt",
      "format": "text"
    },
    "commandHelp": {
      "path": "docs/speccy_cmd_help.txt",
      "format": "text"
    }
  }
}
