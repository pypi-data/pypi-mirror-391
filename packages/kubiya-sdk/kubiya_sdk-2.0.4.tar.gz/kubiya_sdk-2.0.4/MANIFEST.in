include README.md
include LICENSE
include pyproject.toml
include MANIFEST.in

# Include version and typed marker
include kubiya/__version__.py
include kubiya/py.typed

# Include example configurations
include env.example

# Include examples
recursive-include examples *.py *.ipynb *.yml *.yaml

# Exclude development files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.orig
global-exclude *.rej
global-exclude __pycache__
global-exclude .pytest_cache
global-exclude .mypy_cache
global-exclude .ruff_cache
global-exclude .coverage
global-exclude .env
exclude .gitignore
exclude docker-compose.yml
exclude Dockerfile
exclude Makefile

# Exclude documentation
recursive-exclude docs *

# Exclude test directories
recursive-exclude tests *
recursive-exclude doc_tests *
recursive-exclude dependency_tests *

# Exclude build artifacts
recursive-exclude build *
recursive-exclude dist * 