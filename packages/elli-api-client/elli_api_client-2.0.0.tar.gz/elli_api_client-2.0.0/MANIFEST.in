# Include only client-specific files
include src/elli_api_client/README.md
include LICENSE

# Exclude everything we don't want in the package
global-exclude *.txt
global-exclude .env*
global-exclude *.yml
global-exclude *.yaml
global-exclude Dockerfile*
global-exclude docker-compose*
global-exclude .dockerignore
global-exclude .flake8
global-exclude .pre-commit-config.yaml
global-exclude .releaserc.json
recursive-exclude src/api *
recursive-exclude scripts *
recursive-exclude docker *
recursive-exclude .github *
prune src/api
prune scripts
prune docker
prune .github

# Standard Python excludes
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
