<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="grouped_report_settlement_document">
        <t t-set="o" t-value="o.with_context(lang=o.agent_id.lang)" />
        <t t-call="web.external_layout">
            <div class="row">
                <div class="offset-col-6 col-6" name="address">
                    <t t-set="address">
                        <address
                            class="mb-0"
                            t-field="o.agent_id"
                            t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'
                        />
                    </t>
                </div>
            </div>
            <div class="mt-5">
                <div class="page">
                    <h2>Grouped Settlement</h2>
                    <div id="informations" class="row mt-4 mb-4">
                        <div class="col-auto col-3 mw-100 mb-2" t-if="o.date_from">
                            <strong>From:</strong>
                            <p t-field="o.date_from" />
                        </div>
                        <div class="col-auto col-3 mw-100 mb-2" t-if="o.date_to">
                            <strong>To:</strong>
                            <p t-field="o.date_to" />
                        </div>
                    </div>
                    <table class="table table-sm" name="invoice_line_table">
                        <thead>
                            <tr>
                                <th class="text-start" name="th_date">Date</th>
                                <th
                                    class="text-start"
                                    name="th_commission"
                                >Commission</th>
                                <th
                                    class="text-end"
                                    name="th_amount"
                                >Amount settled</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr t-foreach="o.grouped_report_lines()" t-as="l">
                                <td name="td_date">
                                    <span t-out="l.get('date')" />
                                </td>
                                <td name="td_commission" class="text-start">
                                    <span t-esc="l.get('commission')" />
                                </td>
                                <td name="td_amount" class="text-end">
                                    <span
                                        t-esc="l.get('settled_amount', 0.0)"
                                        t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"
                                    />
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2" class="text-end">
                                    <strong>Total</strong>
                                </td>
                                <td name="td_total" class="text-end">
                                    <span
                                        t-field="o.total"
                                        t-options="{'widget': 'monetary', 'display_currency': o.currency_id}"
                                    />
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </t>
    </template>
    <template id="grouped_report_settlement">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t
                    t-call="commission.grouped_report_settlement_document"
                    t-lang="o.agent_id.lang"
                />
            </t>
        </t>
    </template>
</odoo>
