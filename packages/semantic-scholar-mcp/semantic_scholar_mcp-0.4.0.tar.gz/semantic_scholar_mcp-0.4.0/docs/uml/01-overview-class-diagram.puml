' ===== BASE MODELS (from base_models.py) =====
abstract class BaseEntity {
  +id: str
  +created_at: datetime
  +updated_at: datetime
}

class CacheableModel {
  +cache_key: str
  +cache_ttl: int
  +to_cache_value(): Dict[str, Any]
