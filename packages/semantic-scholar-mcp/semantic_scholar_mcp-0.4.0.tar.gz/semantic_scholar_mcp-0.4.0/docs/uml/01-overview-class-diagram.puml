}

class ApiResponse<T> {
  +data: T
  +total: Optional[int]
  +offset: Optional[int]
  +next: Optional[str]
  +success: bool
  +error: Optional[str]
}

class PaginatedResponse<T> {
  +items: List[T]
  +total: int
  +offset: int
  +limit: int
  +has_next: bool
  +has_previous: bool
}

' ===== CONFIGURATION (from config.py) =====
class ApplicationConfig {
  +environment: str
  +debug: bool
  +log_level: str
  +semantic_scholar: SemanticScholarConfig
  +cache: CacheConfig
