from PWQ_QR_GEN_4 import PWQ_QR_GEN_4

# --- PWQAI Mode -> True
PWQQRGEN4 = PWQ_QR_GEN_4(
    "ã“ã‚Œã¯æ¼¢å­—ã®ã‚¨ãƒ³ã‚³ãƒ¼ãƒ‡ã‚£ãƒ³ã‚°ã®ä¾‹ã§ã™",   # Input text
    r"C:\Users\user\path\to\save",             # File path for saving
