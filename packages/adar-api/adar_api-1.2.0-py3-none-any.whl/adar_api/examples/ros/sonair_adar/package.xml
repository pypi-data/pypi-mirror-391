<?xml version="1.0"?>
<?xml-model href="http://download.ros.org/schema/package_format3.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">
  <name>sonair_adar</name>
  <version>0.0.1</version>
  <description>ROS2 driver for the Sonair ADAR, providing real-time point cloud streaming via CoAP with static transforms for visualization</description>
  <maintainer email="support@sonair.com">Sonair</maintainer>
  <license>MIT</license>
  <url type="website">https://sonair.com</url>
  <author email="support@sonair.com">Sonair</author>

  <!-- Build dependencies -->
  <depend>rclpy</depend>
  <depend>sensor_msgs</depend>
  <depend>geometry_msgs</depend>
  <depend>std_msgs</depend>
  <depend>tf2_ros</depend>

  <!-- Python dependencies -->
  <exec_depend>python3-numpy</exec_depend>
  <exec_depend>python3-aiocoap</exec_depend>

  <export>
    <build_type>ament_python</build_type>
  </export>
</package>
