{
  "hooks": {
    "lint": {
      "run": ".rubisco/lint.yaml"
    },
    "build": {
      "run": ".rubisco/build.yaml"
    },
    "dist": {
      "run": ".rubisco/dist.yaml"
    },
    "clean": {
      "workflow": [
        {
          "name": "Clean workflow",
          "remove": [
            ".bindir",
            "build",
            "dist",
            "*/**/__pycache__",
            ".rubisco/*.log",
            "*.7z",
            "*.gz",
            "*.xz",
            "*.zip"
          ],
          "strict": false
        }
      ]
    }
  }
}

