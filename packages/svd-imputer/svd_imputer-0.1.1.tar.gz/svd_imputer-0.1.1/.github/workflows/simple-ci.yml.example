# Simplified CI - Good balance of quality vs. simplicity
name: Simple CI

on:
  push:
    branches: [ main, develop ]
  pull_request:
    branches: [ main, develop ]

jobs:
  test:
    name: Test Python ${{ matrix.python-version }}
    runs-on: ubuntu-latest
    strategy:
      matrix:
        python-version: ['3.9', '3.11', '3.12']
    
    steps:
    - uses: actions/checkout@v4
    
    - name: Set up Python
      uses: actions/setup-python@v4
      with:
        python-version: ${{ matrix.python-version }}
        
    - name: Install dependencies
      run: |
        python -m pip install --upgrade pip
        pip install -e .
        pip install pytest pytest-cov black
        
    - name: Format check (Black only)
      run: black --check svd_imputer/ tests/
      
    - name: Run tests
      run: |
        pytest --cov=svd_imputer --cov-report=term tests/
        
    - name: Test package install
      run: |
        python -c "import svd_imputer; print('âœ… Package imports successfully')"